@model MonitoringLogSearchModel
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.PaymentGuard.Menu.MonitoringLogs").Text;

    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("PaymentGuard.Menu.MonitoringLogs");
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugins.Misc.PaymentGuard.Menu.MonitoringLogs")
    </h1>
    <div class="float-right">
        <button type="button" class="btn btn-success" name="exporttocsv" onclick="exportMonitoringLogsToCsv()">
            <i class="fas fa-file-csv"></i>
            @T("Plugins.Misc.PaymentGuard.ExportToCsv")
        </button>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row opened">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-up" aria-hidden="true"></i></div>
                        </div>
                        <div class="search-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchPageUrl" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchPageUrl" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchHasUnauthorizedScripts" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="SearchHasUnauthorizedScripts" asp-items="Model.AvailableUnauthorizedOptions" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchStoreId" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="SearchStoreId" asp-items="Model.AvailableStores" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchDateFrom" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchDateFrom" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchDateTo" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchDateTo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-logs" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "monitoring-logs-grid",
                            UrlRead = new DataUrl("MonitoringLogsList", "PaymentGuard", null),
                            SearchButtonId = "search-logs",
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.SearchPageUrl)),
                                new FilterParameter(nameof(Model.SearchHasUnauthorizedScripts)),
                                new FilterParameter(nameof(Model.SearchDateFrom)),
                                new FilterParameter(nameof(Model.SearchDateTo)),
                                new FilterParameter(nameof(Model.SearchStoreId)),
                            },
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(MonitoringLogModel.PageUrl))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.PageUrl").Text,
                                    Width = "250",
                                    Render = new RenderCustom("renderPageUrl")
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.TotalScriptsFound))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.TotalScriptsFound").Text,
                                    Width = "80",
                                    ClassName = NopColumnClassDefaults.CenterAll
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.AuthorizedScriptsCount))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.AuthorizedScriptsCount").Text,
                                    Width = "80",
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Render = new RenderCustom("renderAuthorizedCount")
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.UnauthorizedScriptsCount))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.UnauthorizedScriptsCount").Text,
                                    Width = "80",
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Render = new RenderCustom("renderUnauthorizedCount")
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.CheckType))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.CheckType").Text,
                                    Width = "100",
                                    Render = new RenderCustom("renderCheckType")
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.CheckedOnUtc))
                                {
                                    Title = T("Plugins.Misc.PaymentGuard.MonitoringLogs.Fields.CheckedOnUtc").Text,
                                    Width = "150",
                                    Render = new RenderDate()
                                },
                                new ColumnProperty(nameof(MonitoringLogModel.Id))
                                {
                                    Title = T("Admin.Common.View").Text,
                                    Width = "100",
                                    ClassName = NopColumnClassDefaults.Button,
                                    Render = new RenderCustom("renderActions")
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function renderPageUrl(data, type, row, meta) {
        var url = data.length > 50 ? data.substring(0, 50) + '...' : data;
        return '<span title="' + data + '">' + url + '</span>';
    }

    function renderAuthorizedCount(data, type, row, meta) {
        return '<span class="badge badge-success">' + data + '</span>';
    }

    function renderUnauthorizedCount(data, type, row, meta) {
        var badgeClass = data > 0 ? 'badge-danger' : 'badge-success';
        return '<span class="badge ' + badgeClass + '">' + data + '</span>';
    }

    function renderCheckType(data, type, row, meta) {
        var badgeClass, displayText;
        switch(data) {
            case 'manual':
                badgeClass = 'badge-info';
                displayText = '@T("Plugins.Misc.PaymentGuard.MonitoringLogs.Manual")';
                break;
            case 'scheduled':
                badgeClass = 'badge-primary';
                displayText = '@T("Plugins.Misc.PaymentGuard.MonitoringLogs.Scheduled")';
                break;
            default:
                badgeClass = 'badge-secondary';
                displayText = data;
        }
        return '<span class="badge ' + badgeClass + '">' + displayText + '</span>';
    }

    function renderActions(data, type, row, meta) {
        return '<a class="btn btn-default btn-sm" href="/Admin/PaymentGuard/MonitoringLogDetails/' + data + '">' +
               '<i class="fas fa-eye"></i> @T("Plugins.Misc.PaymentGuard.MonitoringLogs.View")</a>';
    }

    function exportMonitoringLogsToCsv() {
        // Get current search parameters
        var searchModel = {
            SearchPageUrl: $('#SearchPageUrl').val(),
            SearchHasUnauthorizedScripts: $('#SearchHasUnauthorizedScripts').val(),
            SearchDateFrom: $('#SearchDateFrom').val(),
            SearchDateTo: $('#SearchDateTo').val(),
            SearchStoreId: $('#SearchStoreId').val(),
        };
        addAntiForgeryToken(searchModel);

        // Create form and submit
        var form = $('<form method="post" action="@Url.Action("ExportMonitoringLogsToCsv", "PaymentGuard")">');
        $.each(searchModel, function(key, value) {
            if (value) {
                form.append($('<input type="hidden" name="' + key + '" value="' + value + '">'));
            }
        });
        $('body').append(form);
        form.submit();
        form.remove();
    }
</script>